@model Mvc_Stock_Project.Models.Entity.Tbl_Products
@{
    ViewBag.Title = "BringProduct";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Update", "Product", FormMethod.Post))

{
    <div class="form-group">
        @Html.LabelFor(m => m.pct_ID)
        @Html.TextBoxFor((m => m.pct_ID), new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.pct_name)
        @Html.TextBoxFor((m => m.pct_name), new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.pct_brand)
        @Html.TextBoxFor((m => m.pct_brand), new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.pct_brand)
        @Html.DropDownListFor(m=>m.Tbl_Categories.ctg_ID,(List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
        @*@Html.TextBoxFor((m => m.pct_brand), new { @class = "form-control" })*@
        <br />
        @Html.LabelFor(m => m.pct_category)
        @Html.TextBoxFor((m => m.pct_category), new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.pct_price)
        @Html.TextBoxFor((m => m.pct_price), new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.pct_stock)
        @Html.TextBoxFor((m => m.pct_stock), new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-warning">Update Product</button>
    </div>
}

